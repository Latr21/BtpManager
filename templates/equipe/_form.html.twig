{{ form_start(form) }}
    <div class="mb-3">
        {{ form_label(form.nom_equipe) }}
        {{ form_widget(form.nom_equipe, {'attr': {'class': 'form-control'}}) }}
    </div>
    
    <div class="mb-3">
        {{ form_label(form.competance_equipe) }}
        {{ form_widget(form.competance_equipe, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.chef_equipe) }}
        {{ form_widget(form.chef_equipe, {'attr': {'class': 'form-control'}}) }}
    </div>

    <!-- Ajouter un champ pour sÃ©lectionner plusieurs ouvriers -->
    <div class="mb-3">
    {{ form_label(form.ouvriers) }}
    <div class="row">
        {% for ouvrier in form.ouvriers %}
            <div class="col-md-4">
                <div class="form-check">
                    {{ form_widget(ouvrier, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(ouvrier, null, {'attr': {'class': 'form-check-label'}}) }}
                </div>
            </div>
        {% endfor %}
    </div>
</div>


    <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
