{% extends 'base.html.twig' %}

{% block title %}Liste des équipes{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Liste des équipes</h1>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nom de l'équipe</th>
                        <th>Compétence de l'équipe</th>
                        <th>Nombre de membres</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for equipe in equipes %}
                    <tr>
                        <td>{{ equipe.nomEquipe }}</td>
                        <td>{{ equipe.competanceEquipe }}</td>
                        <td>{{ equipe.nombre }}</td>
                        <td>
                            <a href="{{ path('app_equipe_show', {'id': equipe.id}) }}" class="btn btn-info btn-sm">Voir</a>
                            <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucune équipe trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
